{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noEmit": true,
    "importHelpers": true,
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ],
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
