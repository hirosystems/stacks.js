{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true
  },
  "include": [
    "src",
  ],
  "typedocOptions": {
    "name": "blockstack.js Library Reference",
    "readme": "overview.md",
    "includes": "includes",
    "mode": "file",
    "exclude": "**/src/wallet.ts **/src/encryption/wallet.ts **/src/auth/authMessages.d.ts",
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeExternals": true,
    "includeDeclarations": false,
    "target": "ES6",
    "gitRevision": "master",
    "listInvalidSymbolLinks": true,
    "theme": "docs-theme"
  }
}
